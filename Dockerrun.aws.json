{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "backend-volume",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "camboim/zaivu:latest",
      "essencial": true,
      "hostname": "backend",
      "portMappings": [
        {
          "hostPort": 5000,
          "containerPort": 5000
        }
      ],
      "command": ["node", "/app/src/index.js"],
      "memory": 256,
      "environment": [
        {
          "name": "MONGO_USERNAME",
          "value": "camboim"
        },
        {
          "name": "MONGO_PASSWORD",
          "value": "Guitarra7762"
        },
        {
          "name": "MONGO_HOSTNAME",
          "value": "ec2-54-233-236-237.sa-east-1.compute.amazonaws.com"
        },
        {
          "name": "MONGO_PORT",
          "value": 21017
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "backend-volume",
          "containerPath": "/app"
        }
      ]
    },
    {
      "name": "redis",
      "image": "redis",
      "essencial": true,
      "hostname": "redis",
      "portMappings": [
        {
          "hostPort": 6379,
          "containerPort": 6379
        }
      ],
      "memory": 100,
      "links": ["backend"]
    }
  ]
}
